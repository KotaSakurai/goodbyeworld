
<h1>Goodbye World!!</h1><br>
<h2>別れたカップルのLINEスクショ投稿サイトです</h2>
<%= link_to '投稿する',new_image_url %>


<% @images.each do |i| %>
  <div class="image_contents">
    <p><%= i.name %></p>
    <img src = <%= i.image %>>
    <span>
      <%= link_to 'men',judges_path(judge:{image_id:i.id, gender:0}), method: :post %>
      <p><%= i.vote_to_male.count %></p>
      <%= link_to 'women',judges_path(judge:{image_id:i.id, gender:1}), method: :post %>
      <P><%= i.vote_to_female.count %></P>
    </span>
  </div>
<% end %>